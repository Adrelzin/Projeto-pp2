<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <title>Calendário - Semente Diária</title>
    <link rel="icon" href="{{ url_for('static', filename='logo.ico') }}" type="image/x-icon">
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            background-color: #dac8b3;
            font-family: Arial, sans-serif;
        }

        header {
            display: flex;
            background-color: green;
            width: 100%;
            margin: 0;
            padding: 1rem;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
        }

        a {
            text-decoration: none;
            color: inherit;
            display: block;
            transition: all 0.3s ease;
        }

        .header-left {
            display: flex;
            align-items: center;
        }

        header img {
            margin-right: 20px;
            border-radius: 50%;
            object-fit: cover;
        }

        header .header-left h1 {
            color: aliceblue;
            margin: 0 20px 0 0;
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        header .header-right a {
            color: aliceblue;
            padding: 8px 16px;
            border-radius: 20px;
            transition: all 0.3s ease;
            min-width: 80px;
            text-align: center;
        }

        header .header-right a h1 {
            margin: 0;
            font-size: 1rem;
            font-weight: normal;
        }

        header .header-right a:hover {
            transform: scale(1.05);
            background: rgba(255,255,255,0.1);
        }

        main {
            padding: 2rem;
            margin-bottom: 100px;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

        .calendar-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .calendar-header h2 {
            color: green;
            margin: 0;
            font-size: 2rem;
        }

        .month-nav {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .month-nav button {
            background: green;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .month-nav button:hover {
            background: darkgreen;
        }

        .month-nav span {
            font-size: 1.2rem;
            font-weight: bold;
            color: green;
            min-width: 200px;
            text-align: center;
        }

        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background: #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
        }

        .calendar-day-header {
            background: green;
            color: white;
            padding: 1rem;
            text-align: center;
            font-weight: bold;
        }

        .calendar-day {
            background: white;
            padding: 1rem;
            min-height: 100px;
            position: relative;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .calendar-day:hover {
            background: #f0f8f0;
        }

        .calendar-day.other-month {
            background: #f5f5f5;
            color: #999;
        }

        .calendar-day.today {
            background: #e8f5e8;
            border: 2px solid green;
        }

        .day-number {
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .project-form {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .project-form h3 {
            color: green;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #333;
            font-weight: bold;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: green;
            box-shadow: 0 0 0 3px rgba(0,128,0,0.1);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }

        .form-row {
            display: flex;
            gap: 1rem;
        }

        .form-row .form-group {
            flex: 1;
        }

        .color-picker {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .color-option {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            border: 3px solid transparent;
            transition: all 0.3s ease;
        }

        .color-option:hover {
            transform: scale(1.1);
        }

        .color-option.selected {
            border-color: #333;
            transform: scale(1.2);
        }

        .btn-submit {
            background: green;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-submit:hover {
            background: darkgreen;
            transform: translateY(-2px);
        }

        .btn-edit {
            background: #007bff;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            font-size: 0.8rem;
            cursor: pointer;
            margin-right: 5px;
            transition: all 0.3s ease;
        }

        .btn-edit:hover {
            background: #0056b3;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
            border: none;
            padding: 6px 12px;
            border-radius: 5px;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-delete:hover {
            background: #c82333;
        }

        .btn-cancel {
            background: #6c757d;
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-left: 10px;
        }

        .btn-cancel:hover {
            background: #5a6268;
        }

        footer {
            background-color: green;
            text-align: center;
            padding: 20px;
            width: 100%;
            position: fixed;
            bottom: 0;
            box-shadow: 0 -4px 15px rgba(0,0,0,0.2);
        }

        footer p {
            color: aliceblue;
            margin: 0;
        }

        .project-dots {
            display: flex;
            gap: 4px;
            flex-wrap: wrap;
            margin-top: 8px;
        }

        .project-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            cursor: pointer;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgba(0,0,0,0.5);
        }

        .modal-content {
            background-color: white;
            margin: 10% auto;
            padding: 2rem;
            border-radius: 15px;
            width: 90%;
            max-width: 600px;
            position: relative;
            box-shadow: 0 8px 25px rgba(0,0,0,0.3);
            animation: fadeIn 0.3s ease-out;
        }

        .close-button {
            position: absolute;
            right: 20px;
            top: 10px;
            font-size: 1.5rem;
            color: #aaa;
            cursor: pointer;
        }

        .close-button:hover {
            color: #333;
        }

        .project-card {
            background: #f9f9f9;
            border-radius: 10px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border-left: 4px solid green;
            transition: all 0.3s ease;
        }

        .project-card:hover {
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .project-card h4 {
            margin: 0 0 0.5rem 0;
            color: green;
        }

        .project-card p {
            margin: 0.5rem 0;
            color: #666;
        }

        .project-date {
            font-size: 0.9rem;
            color: #999;
        }

        .project-actions {
            margin-top: 10px;
            display: flex;
            gap: 10px;
        }

        .form-actions {
            display: flex;
            gap: 10px;
            align-items: center;
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: scale(0.95); }
            to { opacity: 1; transform: scale(1); }
        }

        .alert {
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 8px;
            border: 1px solid transparent;
        }

        .alert-success {
            color: #155724;
            background-color: #d4edda;
            border-color: #c3e6cb;
        }

        .alert-error {
            color: #721c24;
            background-color: #f8d7da;
            border-color: #f5c6cb;
        }
    </style>
</head>
<body>
    <div id="modal" class="modal">
        <div class="modal-content">
            <span class="close-button" onclick="fecharModal()">&times;</span>
            <div id="modal-body"></div>
        </div>
    </div>

    <header>
        <div class="header-left">
            <img src="{{ url_for('static', filename='logo.png') }}" alt="Logo" width="50" height="50">
            <h1>Semente Diária</h1>
        </div>
        <div class="header-right">
            <a href="/index"><h1>Início</h1></a>
            <a href="/logout"><h1>Sair</h1></a>
        </div>
    </header>

    <main>
        <!-- Mensagens Flash -->
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ 'success' if category == 'success' else 'error' }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}

        {% if is_admin() %}
        <div class="project-form">
            <h3 id="form-title">Adicionar Novo Projeto</h3>
            <form id="project-form" method="POST" action="/adicionar_projeto">
                <input type="hidden" id="project-id" name="project_id" value="">
                
                <div class="form-group">
                    <label for="titulo">Título do Projeto:</label>
                    <input type="text" id="titulo" name="titulo" required>
                </div>
                
                <div class="form-group">
                    <label for="descricao">Descrição:</label>
                    <textarea id="descricao" name="descricao" placeholder="Descreva os detalhes do seu projeto..."></textarea>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="data_inicio">Data de Início:</label>
                        <input type="date" id="data_inicio" name="data_inicio" required>
                    </div>
                    <div class="form-group">
                        <label for="data_fim">Data de Fim (opcional):</label>
                        <input type="date" id="data_fim" name="data_fim">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Cor do Projeto:</label>
                    <div class="color-picker">
                        <div class="color-option selected" style="background: #28a745;" data-color="#28a745"></div>
                        <div class="color-option" style="background: #007bff;" data-color="#007bff"></div>
                        <div class="color-option" style="background: #dc3545;" data-color="#dc3545"></div>
                        <div class="color-option" style="background: #ffc107;" data-color="#ffc107"></div>
                        <div class="color-option" style="background: #17a2b8;" data-color="#17a2b8"></div>
                        <div class="color-option" style="background: #6f42c1;" data-color="#6f42c1"></div>
                        <div class="color-option" style="background: #fd7e14;" data-color="#fd7e14"></div>
                        <div class="color-option" style="background: #6c757d;" data-color="#6c757d"></div>
                    </div>
                    <input type="hidden" id="cor" name="cor" value="#28a745">
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn-submit" id="submit-btn">Adicionar Projeto</button>
                    <button type="button" class="btn-cancel" id="cancel-btn" onclick="cancelarEdicao()" style="display: none;">Cancelar</button>
                </div>
            </form>
        </div>
        {% endif %}

        <div class="calendar-container">
            <div class="calendar-header">
                <h2>Calendário de Projetos</h2>
                <div class="month-nav">
                    <button onclick="previousMonth()">◀</button>
                    <span id="monthYear"></span>
                    <button onclick="nextMonth()">▶</button>
                </div>
            </div>
            
            <div class="calendar-grid" id="calendar">
                <div class="calendar-day-header">Dom</div>
                <div class="calendar-day-header">Seg</div>
                <div class="calendar-day-header">Ter</div>
                <div class="calendar-day-header">Qua</div>
                <div class="calendar-day-header">Qui</div>
                <div class="calendar-day-header">Sex</div>
                <div class="calendar-day-header">Sáb</div>
            </div>
        </div>
    </main>

    <footer>
        <p>&copy; 2025 Semente diária. Todos os direitos reservados.</p>
        <p>Contato: contato@metfrix.com | Redes sociais: @MetFrix</p>
    </footer>

    <script>
        let currentDate = new Date();
        let projects = {{ projetos | tojson | safe }};
        let isAdmin = {{ 'true' if is_admin() else 'false' }};

        function formatDateToYMD(date) {
            return date.toISOString().split('T')[0];
        }

        function previousMonth() {
            currentDate.setMonth(currentDate.getMonth() - 1);
            renderCalendar();
        }

        function nextMonth() {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        }

        function renderCalendar() {
            const calendar = document.getElementById('calendar');
            const monthYear = document.getElementById('monthYear');
            calendar.querySelectorAll('.calendar-day').forEach(el => el.remove());

            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();

            monthYear.textContent = new Date(year, month).toLocaleDateString('pt-BR', {
                month: 'long',
                year: 'numeric'
            });

            const firstDay = new Date(year, month, 1);
            const startDate = new Date(firstDay);
            startDate.setDate(startDate.getDate() - firstDay.getDay());

            const today = new Date();

            for (let i = 0; i < 42; i++) {
                const date = new Date(startDate);
                date.setDate(startDate.getDate() + i);
                const ymd = formatDateToYMD(date);

                const dayElement = document.createElement('div');
                dayElement.className = 'calendar-day';

                if (date.getMonth() !== month) {
                    dayElement.classList.add('other-month');
                }

                if (date.toDateString() === today.toDateString()) {
                    dayElement.classList.add('today');
                }

                const dayNumber = document.createElement('div');
                dayNumber.className = 'day-number';
                dayNumber.textContent = date.getDate();
                dayElement.appendChild(dayNumber);

                const dayProjects = projects.filter(p => p.data_inicio === ymd);

                if (dayProjects.length > 0) {
                    dayElement.addEventListener('click', () => abrirModalProjetos(ymd));

                    const projectDots = document.createElement('div');
                    projectDots.classList.add('project-dots');

                    dayProjects.forEach(p => {
                        const dot = document.createElement('span');
                        dot.className = 'project-dot';
                        dot.style.backgroundColor = p.cor || '#28a745';
                        dot.title = p.titulo;
                        projectDots.appendChild(dot);
                    });

                    dayElement.appendChild(projectDots);
                }

                calendar.appendChild(dayElement);
            }
        }

        function abrirModalProjetos(dataYMD) {
            const projetosDia = projects.filter(p => p.data_inicio === dataYMD);
            const modalBody = document.getElementById("modal-body");

            if (!projetosDia.length) return;

            const dataFormatada = new Date(dataYMD).toLocaleDateString('pt-BR');
            let html = `<h3>Projetos de ${dataFormatada}</h3>`;

            projetosDia.forEach(p => {
                html += `
                    <div class="project-card" style="border-left-color: ${p.cor || '#28a745'}">
                        <h4>${p.titulo}</h4>
                        <p>${p.descricao || ''}</p>
                        <p class="project-date"><strong>Início:</strong> ${p.data_inicio}
                        ${p.data_fim ? ' | <strong>Fim:</strong> ' + p.data_fim : ''}</p>
                        ${isAdmin ? `
                            <div class="project-actions">
                                <button class="btn-edit" onclick="editarProjeto(${p.id})">Editar</button>
                                <button class="btn-delete" onclick="confirmarDelecao(${p.id}, '${p.titulo}')">Deletar</button>
                            </div>
                        ` : ''}
                    </div>
                `;
            });

            modalBody.innerHTML = html;
            document.getElementById("modal").style.display = "block";
        }

        function editarProjeto(projectId) {
            const projeto = projects.find(p => p.id == projectId);
            if (!projeto) return;

            document.getElementById('project-id').value = projeto.id;
            document.getElementById('titulo').value = projeto.titulo;
            document.getElementById('descricao').value = projeto.descricao || '';
            document.getElementById('data_inicio').value = projeto.data_inicio;
            document.getElementById('data_fim').value = projeto.data_fim || '';
            
            document.querySelectorAll('.color-option').forEach(option => {
                option.classList.remove('selected');
                if (option.dataset.color === projeto.cor) {
                    option.classList.add('selected');
                }
            });
            document.getElementById('cor').value = projeto.cor || '#28a745';

            document.getElementById('form-title').textContent = 'Editar Projeto';
            document.getElementById('project-form').action = '/editar_projeto';
            document.getElementById('submit-btn').textContent = 'Salvar Alterações';
            document.getElementById('cancel-btn').style.display = 'inline-block';

            fecharModal();
            document.querySelector('.project-form').scrollIntoView({ behavior: 'smooth' });
        }

        function cancelarEdicao() {
            document.getElementById('project-form').reset();
            document.getElementById('project-id').value = '';
            
            document.getElementById('form-title').textContent = 'Adicionar Novo Projeto';
            document.getElementById('project-form').action = '/adicionar_projeto';
            document.getElementById('submit-btn').textContent = 'Adicionar Projeto';
            document.getElementById('cancel-btn').style.display = 'none';
            
            document.querySelectorAll('.color-option').forEach(option => {
                option.classList.remove('selected');
            });
            document.querySelector('.color-option').classList.add('selected');
            document.getElementById('cor').value = '#28a745';
        }

        function confirmarDelecao(projectId, titulo) {
            if (confirm(`Tem certeza que deseja deletar o projeto "${titulo}"?`)) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/excluir_projeto';
                
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'project_id';
                input.value = projectId;
                
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }

        function fecharModal() {
            document.getElementById("modal").style.display = "none";
        }

        window.onclick = function(event) {
            const modal = document.getElementById("modal");
            if (event.target === modal) fecharModal();
        }

        if (isAdmin) {
            document.querySelectorAll('.color-option').forEach(option => {
                option.addEventListener('click', function () {
                    document.querySelectorAll('.color-option').forEach(o => o.classList.remove('selected'));
                    this.classList.add('selected');
                    document.getElementById('cor').value = this.dataset.color;
                });
            });
        }

        renderCalendar();
    </script>
</body>
</html>