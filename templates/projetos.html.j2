<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Projetos - Semente Diária</title>
    <link rel="icon" href="{{ url_for('static', filename='logo.ico') }}" type="image/x-icon">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            background-color: #dac8b3;
            font-family: Arial, sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            position: relative;
            padding-bottom: 80px; 
        }

        header {
            display: flex;
            background-color: green;
            width: 100%;
            padding: 1rem;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            position: relative;
            flex-wrap: wrap;
        }

        a {
            text-decoration: none;
            color: inherit;
            display: block;
            transition: all 0.3s ease;
        }

        .header-left {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-left: 60px; 
        }

        .header-left h1 {
            color: aliceblue;
            margin: 0;
            font-size: clamp(1rem, 4vw, 1.5rem);
            white-space: nowrap;
        }

        .logo {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
        }

        .seta {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            z-index: 3;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.7);
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }

        .seta:hover {
            background-color: rgba(255, 255, 255, 0.9);
            transform: translateY(-50%) scale(1.1);
        }

        .seta img {
            width: 30px;
            height: 30px;
            filter: drop-shadow(0 2px 2px rgba(0,0,0,0.3));
        }

        .header-right {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .header-right a {
            color: aliceblue;
            padding: 8px 16px;
            border-radius: 20px;
            transition: all 0.3s ease;
            font-size: 0.9rem;
        }

        .header-right a:hover {
            transform: scale(1.05);
            background: rgba(255,255,255,0.1);
        }

        main {
            padding: 1.5rem;
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
            flex: 1;
        }

        .page-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .page-header h1 {
            color: #2d5016;
            font-size: clamp(1.5rem, 5vw, 2.5rem);
            margin-bottom: 0.5rem;
        }

        .page-header p {
            color: #666;
            font-size: clamp(0.9rem, 3vw, 1.1rem);
        }

        .form-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .form-container h3 {
            color: #2d5016;
            margin-bottom: 1.5rem;
            font-size: 1.3rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #333;
            font-weight: bold;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 2px solid #ddd;
            border-radius: 8px;
            font-size: 1rem;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: green;
            box-shadow: 0 0 0 3px rgba(0,128,0,0.1);
        }

        .form-row {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .form-row .form-group {
            flex: 1;
            min-width: 200px;
        }

        .color-picker {
            display: flex;
            gap: 0.5rem;
            margin-top: 0.5rem;
            flex-wrap: wrap;
        }

        .color-option {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            cursor: pointer;
            border: 3px solid transparent;
            transition: all 0.3s ease;
        }

        .color-option:hover {
            transform: scale(1.1);
        }

        .color-option.selected {
            border-color: #333;
            transform: scale(1.2);
        }

        .btn {
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1rem;
            transition: all 0.3s ease;
            white-space: nowrap;
        }

        .btn-primary {
            background: green;
            color: white;
        }

        .btn-primary:hover {
            background: darkgreen;
        }

        .btn-secondary {
            background: #007bff;
            color: white;
        }

        .btn-secondary:hover {
            background: #0056b3;
        }

        .btn-danger {
            background: #dc3545;
            color: white;
        }

        .btn-danger:hover {
            background: #c82333;
        }

        .btn-cancel {
            background: #6c757d;
            color: white;
            margin-left: 10px;
        }

        .btn-cancel:hover {
            background: #5a6268;
        }

        .projetos-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
            margin-top: 2rem;
        }

        .projeto-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            border-left: 5px solid;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            display: flex;
            flex-direction: column;
        }

        .projeto-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .projeto-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
            flex-wrap: wrap;
            gap: 10px;
        }

        .projeto-titulo {
            font-size: 1.2rem;
            font-weight: bold;
            color: #2d5016;
            margin: 0;
        }

        .projeto-status {
            background: #e8f5e8;
            color: #2d5016;
            padding: 0.3rem 0.8rem;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: bold;
            white-space: nowrap;
        }

        .projeto-status.em-andamento {
            background: #fff3cd;
            color: #856404;
        }

        .projeto-status.concluido {
            background: #d4edda;
            color: #155724;
        }

        .projeto-status.aguardando {
            background: #f8d7da;
            color: #721c24;
        }

        .projeto-descricao {
            color: #666;
            line-height: 1.6;
            margin-bottom: 1rem;
            flex-grow: 1;
        }

        .projeto-datas {
            display: flex;
            gap: 1rem;
            font-size: 0.9rem;
            margin-bottom: 1rem;
            flex-wrap: wrap;
        }

        .data-item {
            display: flex;
            flex-direction: column;
            min-width: 100px;
        }

        .data-label {
            color: #999;
            font-size: 0.8rem;
            margin-bottom: 0.2rem;
        }

        .data-valor {
            color: #2d5016;
            font-weight: bold;
        }

        .projeto-actions {
            margin-top: 10px;
            display: flex;
            gap: 10px;
            flex-wrap: wrap;
        }

        .nenhum-projeto {
            text-align: center;
            padding: 2rem;
            color: #666;
            grid-column: 1 / -1;
            background: white;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .nenhum-projeto h2 {
            color: #999;
            margin-bottom: 1rem;
        }

        .btn-calendario {
            display: inline-block;
            background: green;
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: 25px;
            margin-top: 1rem;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .btn-calendario:hover {
            background: #218838;
            transform: translateY(-2px);
            color: white;
        }

        .alert {
            padding: 1rem;
            margin: 1rem 0;
            border-radius: 8px;
        }

        .alert-success {
            color: #155724;
            background: #d4edda;
            border: 1px solid #c3e6cb;
        }

        .alert-error {
            color: #721c24;
            background: #f8d7da;
            border: 1px solid #f5c6cb;
        }

        footer {
            background-color: green;
            text-align: center;
            padding: 15px;
            width: 100%;
            position: fixed;
            bottom: 0;
            box-shadow: 0 -4px 15px rgba(0,0,0,0.2);
            z-index: 10;
        }

        /* Responsividade */
        @media (max-width: 768px) {
            header {
                padding: 0.8rem;
            }
            
            .header-left {
                margin-left: 50px;
            }
            
            .logo {
                width: 50px;
                height: 50px;
            }
            
            .seta {
                width: 45px;
                height: 45px;
                left: 10px;
            }
            
            .seta img {
                width: 25px;
                height: 25px;
            }
            
            main {
                padding: 1rem;
            }
            
            .form-container {
                padding: 1.2rem;
            }
            
            .projetos-container {
                gap: 1rem;
            }
            
            .projeto-card {
                padding: 1.2rem;
            }
        }

        @media (max-width: 480px) {
            .header-left h1 {
                white-space: normal;
                font-size: 1.1rem;
            }
            
            .header-right a {
                padding: 6px 12px;
                font-size: 0.8rem;
            }
            
            .form-row .form-group {
                min-width: 100%;
            }
            
            .projeto-titulo {
                font-size: 1.1rem;
            }
        }
    </style>
</head>
<body>
    <header>
        <button class="seta" onclick="window.location.href='/'">
            <img src="/static/download-removebg-preview.png" alt="Voltar">
        </button>
        <div class="header-left">
            <img class="logo" src="{{ url_for('static', filename='logo.png') }}" alt="Logo">
            <h1>Semente Diária</h1>
        </div>
        
        <div class="header-right">
            <a href="/logout">Logout</a>
        </div>
    </header>

    <main>
        {% with messages = get_flashed_messages(with_categories=true) %}
            {% if messages %}
                {% for category, message in messages %}
                    <div class="alert alert-{{ 'success' if category == 'success' else 'error' }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endif %}
        {% endwith %}

        <div class="page-header">
            <h1>Projetos em Desenvolvimento</h1>
            <p>Gerencie e acompanhe o progresso dos nossos projetos e iniciativas</p>
        </div>

        {% if is_admin() %}
        <div class="form-container">
            <h3 id="form-title">Adicionar Novo Projeto</h3>
            <form id="project-form" method="POST" action="/adicionar_projeto">
                <input type="hidden" id="project-id" name="project_id" value="">
                
                <div class="form-group">
                    <label for="titulo">Título do Projeto:</label>
                    <input type="text" id="titulo" name="titulo" required>
                </div>
                
                <div class="form-group">
                    <label for="descricao">Descrição:</label>
                    <textarea id="descricao" name="descricao" rows="3"></textarea>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label for="data_inicio">Data de Início:</label>
                        <input type="date" id="data_inicio" name="data_inicio" required>
                    </div>
                    <div class="form-group">
                        <label for="data_fim">Data de Fim:</label>
                        <input type="date" id="data_fim" name="data_fim">
                    </div>
                </div>
                
                <div class="form-group">
                    <label>Cor do Projeto:</label>
                    <div class="color-picker">
                        <div class="color-option selected" style="background: #28a745;" data-color="#28a745"></div>
                        <div class="color-option" style="background: #007bff;" data-color="#007bff"></div>
                        <div class="color-option" style="background: #dc3545;" data-color="#dc3545"></div>
                        <div class="color-option" style="background: #ffc107;" data-color="#ffc107"></div>
                        <div class="color-option" style="background: #17a2b8;" data-color="#17a2b8"></div>
                        <div class="color-option" style="background: #6f42c1;" data-color="#6f42c1"></div>
                    </div>
                    <input type="hidden" id="cor" name="cor" value="#28a745">
                </div>
                
                <button type="submit" class="btn btn-primary" id="submit-btn">Adicionar Projeto</button>
                <button type="button" class="btn btn-cancel" id="cancel-btn" onclick="cancelarEdicao()" style="display: none;">Cancelar</button>
            </form>
        </div>
        {% endif %}

        <div class="projetos-container">
            {% if projetos %}
                {% for projeto in projetos %}
                <div class="projeto-card" style="border-left-color: {{ projeto.cor or '#28a745' }};">
                    <div class="projeto-header">
                        <h2 class="projeto-titulo">{{ projeto.titulo }}</h2>
                        <span class="projeto-status {{ projeto.status }}">
                            {{ projeto.status_texto }}
                        </span>
                    </div>
                    
                    {% if projeto.descricao %}
                    <div class="projeto-descricao">
                        {{ projeto.descricao }}
                    </div>
                    {% endif %}
                    
                    <div class="projeto-datas">
                        <div class="data-item">
                            <span class="data-label">Início</span>
                            <span class="data-valor">{{ projeto.data_inicio }}</span>
                        </div>
                        {% if projeto.data_fim %}
                        <div class="data-item">
                            <span class="data-label">Término</span>
                            <span class="data-valor">{{ projeto.data_fim }}</span>
                        </div>
                        {% endif %}
                    </div>

                    {% if is_admin() %}
                    <div class="projeto-actions">
                        <button class="btn btn-secondary" onclick="editarProjeto({{ projeto.id }}, '{{ projeto.titulo }}', '{{ projeto.descricao or '' }}', '{{ projeto.data_inicio }}', '{{ projeto.data_fim or '' }}', '{{ projeto.cor or '#28a745' }}')">Editar</button>
                        <button class="btn btn-danger" onclick="confirmarDelecao({{ projeto.id }}, '{{ projeto.titulo }}')">Excluir</button>
                    </div>
                    {% endif %}
                </div>
                {% endfor %}
            {% else %}
                <div class="nenhum-projeto">
                    <h2>Nenhum projeto encontrado</h2>
                    <p>Ainda não há projetos cadastrados no sistema.</p>
                    <a href="/calendario" class="btn-calendario">Ver Calendário</a>
                </div>
            {% endif %}
        </div>
    </main>

    <footer>
    </footer>

    <script>
        let isAdmin = {{ 'true' if is_admin() else 'false' }};

        if (isAdmin) {
            document.querySelectorAll('.color-option').forEach(option => {
                option.addEventListener('click', function () {
                    document.querySelectorAll('.color-option').forEach(o => o.classList.remove('selected'));
                    this.classList.add('selected');
                    document.getElementById('cor').value = this.dataset.color;
                });
            });
        }

        function editarProjeto(projectId, titulo, descricao, dataInicio, dataFim, cor) {
            if (!isAdmin) {
                return;
            }
            
            document.getElementById('project-id').value = projectId;
            document.getElementById('titulo').value = titulo;
            document.getElementById('descricao').value = descricao;
            document.getElementById('data_inicio').value = dataInicio;
            document.getElementById('data_fim').value = dataFim;
            
            document.querySelectorAll('.color-option').forEach(option => {
                option.classList.toggle('selected', option.dataset.color === cor);
            });
            document.getElementById('cor').value = cor;

            document.getElementById('form-title').textContent = '✏️ Editar Projeto';
            document.getElementById('project-form').action = '/editar_projeto';
            document.getElementById('submit-btn').textContent = 'Salvar Alterações';
            document.getElementById('submit-btn').style.background = '#007bff';
            document.getElementById('cancel-btn').style.display = 'inline-block';

            // Scroll para o formulário
            document.querySelector('.form-container').scrollIntoView({ behavior: 'smooth' });
        }

        function cancelarEdicao() {
            // Verificar se usuário é admin silenciosamente
            if (!isAdmin) {
                return;
            }
            
            document.getElementById('project-form').reset();
            document.getElementById('project-id').value = '';
            
            document.getElementById('form-title').textContent = 'Adicionar Novo Projeto';
            document.getElementById('project-form').action = '/adicionar_projeto';
            document.getElementById('submit-btn').textContent = 'Adicionar Projeto';
            document.getElementById('submit-btn').style.background = 'green';
            document.getElementById('cancel-btn').style.display = 'none';
            
            document.querySelectorAll('.color-option').forEach(option => option.classList.remove('selected'));
            document.querySelector('.color-option').classList.add('selected');
            document.getElementById('cor').value = '#28a745';
        }

        function confirmarDelecao(projectId, titulo) {
            if (!isAdmin) {
                return;
            }
            
            if (confirm(`⚠️ ATENÇÃO!\n\nTem certeza que deseja excluir o projeto "${titulo}"?\n\nEsta ação não pode ser desfeita!`)) {

                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/excluir_projeto';
                
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'project_id';
                input.value = projectId;
                
                form.appendChild(input);
                document.body.appendChild(form);
                form.submit();
            }
        }

        if (document.getElementById('project-form')) {
            document.getElementById('project-form').addEventListener('submit', function(e) {
                if (!isAdmin) {
                    e.preventDefault();
                    return false;
                }
            });
        }
    </script>
</body>
</html>
